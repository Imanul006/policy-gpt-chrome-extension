  {
    "manifest_version": 3,
    "name": "Text Content Extension",
    "version": "1.0",
    "description": "Shows the entire text content of a webpage",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Show Text Content",
      "default_icon": {
        "128": "icon-128.png"
      }
    }
  }
  